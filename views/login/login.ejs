<%- include ('../partials/header.ejs') %>
<%- include ('../partials/navbar.ejs') %>
<div class="container">
    <!-- mt = margin-top -->
    <!-- mb = margin=botton -->
    <hr>
    <div class="card mt-4">
        <div class="card-header">
            <h2>
                Login de admin
            </h2>
        </div>
        <div class="card-body">
            <form name="loginForm">
                <input class="form-control" type="email" name="email" placeholder="email@example.com">
                <br>
                <input class="form-control" type="password" name="password" placeholder="*********">
                <br>
                <button type="submit" class="btn btn-success btn-block">
                    Logar
                </button>
                <br>
                <br>
                <a href="/create" class="btn" style="background-color: #acd1ec";>
                    Criar Conta
                </a>
            </form>
        </div>        
    </div>
</div>

<script defer>
    const loginForm = document.forms.loginForm;

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const { email, password } = loginForm;

        const response = await fetch("localhost:3000/users/create", {
            method: "POST",
            headers: {
                "Content-Type": "application/json;charset=utf-8",
            },
            body: JSON.stringify({
                email,
                password,
            })
        })

        if (!response.ok) {
            alert(`Erro: ${response.statusText}`);
            return;
        }

        window.location.href = "localhost:8080/adm/index";
    });    
</script>

